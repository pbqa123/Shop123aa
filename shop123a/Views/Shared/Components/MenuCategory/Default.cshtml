@model IEnumerable<shop123a.ViewModels.MenuCategoryVM>
<!-- ASIDE -->
<div id="aside" class="col-md-3">
	<!-- aside Widget -->
	<div class="aside">
		<h3 class="aside-title">Categories</h3>
		<div class="checkbox-filter">
			@foreach (var item in Model)
			{
				<div class="input-checkbox">
					<input type="checkbox" id="category-1">
					<label for="category-1">
						<a asp-controller="HangHoa" asp-action="Index" asp-route-Category="@item.CategoryId">@item.CategoryName</a>
					</label>
				</div>
			}
		</div>
	</div>
	<!-- /aside Widget -->
</div>
<!-- /ASIDE -->