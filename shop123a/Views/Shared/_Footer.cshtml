<!-- JavaScript để xử lý gửi tin nhắn và hiển thị hình ảnh, link -->
<script>
    // Gửi tin nhắn
    async function sendMessage() {
        const input = document.getElementById('chatbot-input');
        const chatBody = document.getElementById('chatbot-body');

        if (input.value.trim() !== '') {
            // Thêm tin nhắn của người dùng
            const userMessage = document.createElement('div');
            userMessage.className = 'message user-message';
            userMessage.textContent = input.value;
            chatBody.appendChild(userMessage);

            try {
                // Gửi request tới backend
                const response = await fetch('/Chatbot/SendMessage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ message: input.value })
                });

                const data = await response.json();

                if (data.success) {
                    // Thêm phản hồi từ bot với hỗ trợ HTML
                    const botMessage = document.createElement('div');
                    botMessage.className = 'message bot-message';

                    // Chuyển đổi định dạng phản hồi từ backend thành HTML
                    const formattedMessage = formatMessageToHtml(data.message);
                    botMessage.innerHTML = formattedMessage;
                    chatBody.appendChild(botMessage);
                } else {
                    const errorMessage = document.createElement('div');
                    errorMessage.className = 'message bot-message';
                    errorMessage.textContent = data.message;
                    chatBody.appendChild(errorMessage);
                }
            } catch (error) {
                const errorMessage = document.createElement('div');
                errorMessage.className = 'message bot-message';
                errorMessage.textContent = 'Lỗi kết nối đến server: ' + error.message;
                chatBody.appendChild(errorMessage);
            }

            // Xóa input và cuộn xuống cuối
            input.value = '';
            chatBody.scrollTop = chatBody.scrollHeight;
        }
    }

    // Hàm chuyển đổi định dạng phản hồi thành HTML
    function formatMessageToHtml(message) {
        if (!message) return '<p>Không có phản hồi từ bot.</p>';

        // Nếu message là một object (JSON từ backend)
        if (typeof message === 'object' && message.text) {
            let htmlContent = `<p>${message.text}</p>`;

            // Nếu có danh sách sản phẩm
            if (message.products && message.products.length > 0) {
                htmlContent += '<div class="product-list">';
                message.products.forEach(product => {
                    htmlContent += `
                        <div class="product-item">
                            <p><strong>${product.name}</strong> (Độ khớp: ${product.matchScore}%)</p>
                            <p>Giá: ${product.price}</p>
                            <p>${product.description}</p>
                            ${product.quantity > 0 ? `<p>Còn: ${product.quantity} sản phẩm</p>` : '<p>Hết hàng</p>'}
                            <img src="${product.imageUrl}" alt="${product.name}">
                            <p><a href="${product.productUrl}" target="_blank">Xem sản phẩm</a></p>
                        </div>`;
                });
                htmlContent += '</div>';
            }

            return htmlContent;
        }

        // Nếu message là chuỗi đơn giản (ví dụ từ OpenAI)
        return `<p>${message}</p>`;
    }

    // Xử lý sự kiện nhấn Enter
    document.getElementById('chatbot-input').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            sendMessage();
        }
    });

    // Đóng khung chat khi nhấp vào nút X
    document.querySelector('.chatbot-close').addEventListener('click', function () {
        document.getElementById('chatbot-toggle').checked = false;
    });
</script>